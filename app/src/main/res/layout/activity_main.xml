<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_standard"
    android:background="@color/colorGrey">
    <EditText
        android:id="@+id/editInput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/label_input"
        android:gravity="top"
        android:background="@color/colorWhite"
        android:padding="@dimen/margin_standard"
        android:inputType="textMultiLine"/>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_tiny"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_challenge_1"
            android:onClick="onFirstChallengeClicked"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_challenge_2"
            android:onClick="onSecondChallengeClicked"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_challenge_3"
            android:onClick="onThirdChallengeClicked"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="top"
        android:background="@color/colorWhite"
        android:hint="@string/label_output"
        android:padding="@dimen/margin_standard"
        android:inputType="textMultiLine"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

</LinearLayout>
